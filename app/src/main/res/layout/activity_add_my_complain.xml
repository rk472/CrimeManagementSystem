<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMyComplainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:layout_width="160sp"
        android:layout_height="160sp"
        android:layout_margin="10sp"
        android:src="@drawable/logo"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/edit_shape"
        android:inputType="text"
        android:layout_margin="10dp"
        android:hint="Title"
        android:textAlignment="center"
        android:id="@+id/complain_title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/edit_shape"
        android:inputType="textMultiLine"
        android:maxLength="400"
        android:layout_margin="10dp"
        android:hint="Description"
        android:textAlignment="center"
        android:id="@+id/complain_desc"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/edit_shape"
        android:inputType="number"
        android:maxLength="6"
        android:layout_margin="10dp"
        android:hint="Phone"
        android:textAlignment="center"
        android:id="@+id/complain_phone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/edit_shape"
        android:inputType="number"
        android:maxLength="6"
        android:layout_margin="10dp"
        android:hint="Pin Code"
        android:textAlignment="center"
        android:id="@+id/complain_pincode"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add complain report"
        android:background="@drawable/btn_shape"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_margin="10sp"
        android:onClick="addComplain"/>
</LinearLayout>