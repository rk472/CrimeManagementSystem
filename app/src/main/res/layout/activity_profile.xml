<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:gravity="center"
    tools:context=".ProfileActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:elevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_height="120dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:civ_border_color="#000000"
                        android:id="@+id/profile_image"
                        android:layout_margin="10sp"
                        app:civ_border_width="2dp"
                        android:src="@drawable/ic_person_black_24dp" />
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/camera_vect"
                        android:layout_alignParentRight="true"
                        android:onClick="uploadProfilePhoto"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:fontFamily="@font/acme"
                        android:id="@+id/profile_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:layout_marginTop="3sp"
                        android:textSize="17sp"
                        android:id="@+id/profile_email"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acme"
                        android:textSize="17sp"
                        android:layout_marginTop="3sp"
                        android:id="@+id/profile_phone"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My missing report"
                android:background="@drawable/btn_shape"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_margin="10sp"
                android:onClick="goToMyMissings"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my complain report"
                android:background="@drawable/btn_shape"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_margin="10sp"
                android:onClick="goToMyComplains"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my crime report"
                android:background="@drawable/btn_shape"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_margin="10sp"
                android:onClick="goToMyCrimes"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:background="@drawable/btn_shape_red"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:layout_marginRight="85sp"
                android:layout_marginLeft="85sp"
                android:onClick="logout"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>